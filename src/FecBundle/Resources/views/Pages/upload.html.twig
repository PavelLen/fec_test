{% extends "@Fec/layout.html.twig" %}
{% block body %}
    <div class="container">
        <div class="row">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_row(form.file, {'attr': {'accept': '.csv'}}) }}
                </div>
                <p>Укажите диапазон загрузки данных с по дату. По-умолчанию "включен вeсь диапазон"</p>
                <div class="form-group">
                    <label>От</label>
                    <input type="date" name="startDate">
                </div>
                <div class="form-group">
                    <label>До</label>
                    <input type="date" name="endDate">
                </div>
                <div class="form-group">
                    <button type="submit" name="submit" class="btn btn-primary">Upload</button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="row" id="report" hidden>
        </div>
    </div>
{% endblock %}